{{- $posts := slice -}}
{{- range .Site.RegularPages -}}
    {{- $post := dict 
        "title" .Title
        "content" .Plain
        "permalink" .Permalink
        "summary" .Summary
        "date" (.Date.Format "2006-01-02")
    -}}
    {{- $posts = $posts | append $post -}}
{{- end -}}
{
    "posts": {{ $posts | jsonify }}
} 